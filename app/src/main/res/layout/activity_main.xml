<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/topgradient">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <TextView
                android:text="Your tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/your_tasks"
                android:textSize="25dp"
                android:textColor="#c1fbf9"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="15dp"

        />

        <ListView
                android:layout_marginTop="60dp"
                android:id="@+id/tasklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/prozr"/>

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true">

            <android.support.design.widget.FloatingActionButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    app:rippleColor="#C1FBF9"
                    android:src="@drawable/baseline_add_24px"
                    android:focusable="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/newtsk1"
            />

        </RelativeLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentTop="true">

            <TextView
                    android:text="Your tasks for today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="25dp"
                    android:id="@+id/month2"
                    android:textColor="#c1fbf9"
                    android:layout_centerHorizontal="true"
            />

            <ImageButton android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginTop="5dp"
                         android:layout_marginRight="5dp"
                         android:text="Settings"
                         android:id="@+id/settings"
                         android:background="@null"
                         app:srcCompat="@drawable/baseline_settings_24px"
            />

            <ImageButton android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginTop="5dp"
                         android:background="@null"
                         android:text="Calendar"
                         android:id="@+id/calend"
                         app:srcCompat="@drawable/baseline_calendar_24px"
            />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

