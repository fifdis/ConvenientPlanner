<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/topgradient">

    <TextView
            android:text="New task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_task"
            android:textSize="30dp"
            android:textColor="#c1fbf9"
            android:layout_centerHorizontal="true"

    />

    <TextView
            android:text="Choose date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_date"
            android:layout_below="@+id/new_task"
            android:layout_marginTop="150dp"
            android:textSize="17dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"/>

    <TextView
            android:text="Starts at: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starts_at"
            android:layout_below="@+id/choose_date"
            android:layout_marginTop="45dp"
            android:textSize="17dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"/>

    <TextView
            android:text="Ends at: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ends_at"
            android:layout_below="@+id/starts_at"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"/>


    <TextView
            android:text="Notes: You can write notes here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notes"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:textColor="#ffffff"/>


    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:textSize="20dp"
            android:textColor="#c1fbf9"
    />

    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textColor="#c1fbf9"/>

    <TextView
            android:text="Reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminders"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:textSize="20dp"
            android:textColor="#c1fbf9"/>

    <TextView
            android:text="Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priority"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/reminders"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:textColor="#c1fbf9"/>

    <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:hint="Write your notes here"
            android:textColor="#ffffff">
    </EditText>

    <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="500dp"
            android:text=" Push me!"
    >
    </Button>

    <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="BACK!">
    </Button>
    <Button
            android:text="select date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_date"
            android:onClick="clickDataPicker"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="200dp"
    />
    <Button
            android:text="select time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_time1"
            android:onClick="clickTimePicker"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="200dp"
    />
    <Button
            android:text="select time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_time2"
            android:onClick="clickTimePicker"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="200dp"
    />


</RelativeLayout>



