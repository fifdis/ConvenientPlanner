<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mon1"
        tools:context=".Doki">

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentTop="true">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_centerHorizontal="true"
              android:text="You are banned now!"
              android:textSize="40dp"
              android:textColor="#000000"
              android:id="@+id/vam_ban"/>

    </RelativeLayout>
    <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/mon_spr"
                   android:layout_marginRight="5dp"
                   android:scaleX="1"
                   android:scaleY="1"
                   android:scaleType="fitEnd"
                   android:id="@+id/Monika"
                   tools:visibility="visible"
        />

    </LinearLayout>

    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/monban"
               android:id="@+id/screamer_Monika"
               tools:visibility="invisible" android:layout_alignParentStart="true" android:layout_marginLeft="0dp"
               android:layout_marginStart="0dp" android:layout_alignParentLeft="true"/>

</RelativeLayout>

</android.support.constraint.ConstraintLayout>